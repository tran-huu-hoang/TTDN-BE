@model Lab09.Models.Banner

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1>Thông tin chi tiết</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Hình ảnh</label>
            <img src="@Model.Image" alt="@Model.Title" width="60" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" readonly />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Tiêu đề phụ</label>
            <input asp-for="SubTitle" class="form-control" readonly />
            <span asp-validation-for="SubTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Đường dẫn</label>
            <input asp-for="Urls" class="form-control" readonly />
            <span asp-validation-for="Urls" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Đặt hàng</label>
            <input asp-for="Orders" class="form-control" readonly />
            <span asp-validation-for="Orders" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" readonly />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedDate" class="control-label"></label>
            <input asp-for="UpdatedDate" class="form-control" readonly />
            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminCreated" class="control-label"></label>
            <input asp-for="AdminCreated" class="form-control" readonly />
            <span asp-validation-for="AdminCreated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminUpdated" class="control-label"></label>
            <input asp-for="AdminUpdated" class="form-control" readonly />
            <span asp-validation-for="AdminUpdated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Ghi chú</label>
            <input asp-for="Notes" class="form-control" readonly />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Trạng thái</label>
            <input class="form-control" readonly @if (Model.Status == 1)
            {
                <text>value="Active"</text>
            }
            else
            {
                <text>value="Inactive"</text>
            }
            />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
