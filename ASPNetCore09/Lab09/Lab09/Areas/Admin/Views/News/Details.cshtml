@model Lab09.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class="py-3">Chi tiết tin tức</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Code</label>
            <input asp-for="Code" class="form-control" readonly />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" readonly />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control ckeditor" id="inputCK"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Nội dung</label>
            <textarea asp-for="Content" class="form-control ckeditor" id="inputCK2"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaTitle" class="control-label"></label>
            <input asp-for="MetaTitle" class="form-control" readonly />
            <span asp-validation-for="MetaTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MainKeyword" class="control-label"></label>
            <input asp-for="MainKeyword" class="form-control" readonly />
            <span asp-validation-for="MainKeyword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaKeyword" class="control-label"></label>
            <input asp-for="MetaKeyword" class="form-control" readonly />
            <span asp-validation-for="MetaKeyword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaDescription" class="control-label"></label>
            <input asp-for="MetaDescription" class="form-control" readonly />
            <span asp-validation-for="MetaDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
            <input asp-for="Slug" class="form-control" readonly />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Views" class="control-label"></label>
            <input asp-for="Views" class="form-control" readonly />
            <span asp-validation-for="Views" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Likes" class="control-label"></label>
            <input asp-for="Likes" class="form-control" readonly />
            <span asp-validation-for="Likes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Star" class="control-label"></label>
            <input asp-for="Star" class="form-control" readonly />
            <span asp-validation-for="Star" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" readonly />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedDate" class="control-label"></label>
            <input asp-for="UpdatedDate" class="form-control" readonly />
            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminCreated" class="control-label"></label>
            <input asp-for="AdminCreated" class="form-control" readonly />
            <span asp-validation-for="AdminCreated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminUpdated" class="control-label"></label>
            <input asp-for="AdminUpdated" class="form-control" readonly />
            <span asp-validation-for="AdminUpdated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Trạng thái</label>
            <input class="form-control" readonly @if (Model.Status == 1)
            {
                <text>value="Active"</text>
            }
            else
            {
                <text>value="Inactive"</text>
            }
            />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group pl-5">
            <label class="control-label">Hình ảnh</label><br />
            <img src="@Model.Image" alt="@Model.Title" width="300" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts{
    <script>
        ClassicEditor
            .create(document.querySelector('#inputCK'))
            .catch(error => {
                console.log(error);
            });

        ClassicEditor
            .create(document.querySelector('#inputCK2'))
            .catch(error => {
                console.log(error);
            });
    </script>
}