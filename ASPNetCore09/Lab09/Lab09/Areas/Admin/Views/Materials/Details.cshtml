@model Lab09.Models.Material

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class="py-3">Chi tiết vật liệu</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" readonly />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaTitle" class="control-label"></label>
            <input asp-for="MetaTitle" class="form-control" readonly />
            <span asp-validation-for="MetaTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaKeyword" class="control-label"></label>
            <input asp-for="MetaKeyword" class="form-control" readonly />
            <span asp-validation-for="MetaKeyword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaDescription" class="control-label"></label>
            <input asp-for="MetaDescription" class="form-control" readonly />
            <span asp-validation-for="MetaDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
            <input asp-for="Slug" class="form-control" readonly />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Orders" class="control-label"></label>
            <input asp-for="Orders" class="form-control" readonly />
            <span asp-validation-for="Orders" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Parentid" class="control-label"></label>
            <input asp-for="Parentid" class="form-control" readonly />
            <span asp-validation-for="Parentid" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" readonly />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedDate" class="control-label"></label>
            <input asp-for="UpdatedDate" class="form-control" readonly />
            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminCreated" class="control-label"></label>
            <input asp-for="AdminCreated" class="form-control" readonly />
            <span asp-validation-for="AdminCreated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdminUpdated" class="control-label"></label>
            <input asp-for="AdminUpdated" class="form-control" readonly />
            <span asp-validation-for="AdminUpdated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Ghi chú</label>
            <input asp-for="Notes" class="form-control" readonly />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Trạng thái</label>
            <input class="form-control" readonly @if (Model.Status == 1)
            {
                <text>value="Active"</text>
            }
            else
            {
                <text>value="Inactive"</text>
            }
            />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group pl-5">
            <label class="control-label">Icon</label><br />
            <img src="@Model.Icon" alt="@Model.Title" width="300" class="pb-3" />
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
