@model IEnumerable<Lab06.Models.Product>

<div class="row flex-1">
    @foreach(var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Image" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>Giá: @item.Price</p>
                    <p>Giá ưu đãi: @item.SalePrice</p>
                </div>
            </div>
        </div>
    }
</div>