@model Lab06_practice.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin sinh viên</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentAvatar)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.StudentAvatar" alt="@Model.StudentName" width="60" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentBirthday)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentBirthday)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StdClass)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StdClass.ClassName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
