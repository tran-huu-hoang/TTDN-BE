@model Lab05_ex.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm mới danh mục</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <span asp-for="Id" class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.Id)</span>
                <input asp-for="Id" type="text" class="form-control" value="@ViewBag.Id" aria-label="Username" aria-describedby="basic-addon1">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span asp-for="Id" class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.Name)</span>
                <input asp-for="Name" type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.Status)
                    <input type="radio" name="Status" id="Show" value="true" checked /><label for="Show">Show</label>
                    <input type="radio" name="Status" id="Hide" value="false" /><label for="Hide">Hide</label>
                </label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
