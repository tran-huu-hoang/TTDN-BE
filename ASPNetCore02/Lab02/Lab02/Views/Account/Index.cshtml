@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts;
}

<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-4">
            <div class=" thumbnail">
                <img class="w-50" src="@item.Avatar" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-route="profile" asp-route-id="@item.Id" class="btn btn-success btn-block">Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>