@model IEnumerable<Lab03_ex.Models.Product>

<div class="row">
    <div class="col-md-3">
        <partial name="Menu"></partial>
    </div>

    <div class="col-md-9">
        <div class="row border border-1">
            <h4 class="bg-primary text-white p-2 rounded-1">Sản phẩm mới nhất</h4>
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="border border-1 p-3">
                        <img src="@item.Image" class="w-100">
                        <h4 class="pt-3">@item.Name</h4>
                    </div>
                </div>
            }
        </div>
        @await Component.InvokeAsync("Product");
    </div>
</div>